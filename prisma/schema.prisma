generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model User{
  id Int @id @default(autoincrement())
  clerkId String @unique
  organizationId String @unique @default(cuid())
  organizationName String
  isPro Boolean @default(false)
  organizationLogoUrl String @default("https://www.gravatar.com/avatar/00000000000000000000000000000000?d=mp&f=y")
}

model Application{
  id Int @id @default(autoincrement())
  appName String 
  appLogoUrl String
  appDescription String
  appEndpoint String @unique
  appSecret String
  appId String @unique @default(cuid())
  organizationId String @unique
  organizationName String
  features String @default("")
  usageCount Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  createdBy String @default("") @unique
  updatedBy String @default("") @unique
}

model FeedbackData{
  id Int @id @default(autoincrement())
  title String
  content String
  clerkId String
  slug String @unique @default(cuid())
  createdAt DateTime @default(now())
  response String @default("[]")
  appId String @unique @default("")
}